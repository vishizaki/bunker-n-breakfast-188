<p>Hi! you've reached the my bunkers page</p>
<div class="container">
  <% @bunkers.each do |bunker| %>
    <div class="card">
      <div class="bunker-card-image" style="background-image: url(<%= cl_image_path bunker.photo%>)"></div>
      </div>
      <li>name: <%= bunker.name %></li>
      <li>location: <%= bunker.location %></li>
      <li>description: <%= bunker.description %></li>
      <li>price: $<%= bunker.price %></li>

      <% if !bunker.bookings.empty? %>
       <p> This is booked </p>
      <% end %>
    </div>
  <% end %>
</div>
