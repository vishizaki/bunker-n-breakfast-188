    <div class="container padded" >
      <div class="row">
        <div class="col-12">
          <h1>My Bunkers <i class="fas fa-home"></i> </h1>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-4">
         <% if policy(Bunker).new? %>
          <%= link_to new_bunker_path do %>
           <button type="button" class="btn btn-danger">Add a new Bunker</button>
          <% end %>
         <% end %>
        </div>
      </div>
    </div>

     <div class="wrapper-darkmint padded">
       <div class="container">
        <div class="row">
          <% @bunkers.each do |bunker| %>
            <div class="card">
              <div class="bunker-card-image" style="background-image: url(<%= cl_image_path bunker.photo%>)"></div>
              </div>
              <li>name: <%= bunker.name %></li>
              <li>address: <%= bunker.address %></li>
              <li>description: <%= bunker.description %></li>
              <li>price: $<%= bunker.price %></li>

            <% if bunker.bookings.first.status == "pending" %>

             <%= link_to "Accept", bunker_booking_path(bunker.id, bunker.bookings.first.id, { value: "accepted" }), class: 'btn btn-success', method: :patch %>
             <%= link_to "Refuse", bunker_booking_path(bunker.id, bunker.bookings.first.id, { value: "denied" }), class: 'btn btn-danger', method: :patch %>

            <% end %>
          </div>
         <% end %>
        </div>
       </div>
     </div>

