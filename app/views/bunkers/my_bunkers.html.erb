 <!-- banner -->
 <div class="bg-half mask-black" style="background-image: url(<%= image_path 'endoftheworld-earth.jpg'%>)">
  <div class="container padded">
   <h1 style="color: #FFFFFF">My Bunkers <i class="fas fa-home"></i> </h1>
   <div class="row">
        <div class="col-xs-4">
         <% if policy(Bunker).new? %>
          <%= link_to new_bunker_path do %>
           <button type="button" class="btn btn-danger">Add a new Bunker</button>
          <% end %>
         <% end %>
        </div>
      </div>
  </div>
</div>
