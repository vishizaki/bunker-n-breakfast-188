<div style="background: #5d737e;">
  <div class="cover-photo" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%=cl_image_path@bunker.photo%>)">
    <div class="title-card">
        <h2 class="title-show"><%= @bunker.name %></h2>
        <h3> Address: <%= @bunker.address %></h3>
    </div>
  </div>

  <div id="container-show">
    <div class="row equal-cols"> 
      <div class="col-xs-4"> 
        <div class="col-xs-12 content-show">
          <h2 class="title-show">Bunker Details</h2>
          <h3><%= @bunker.description %></h3>
          <span><i class="fas fa-dollar-sign"></i> <%= @bunker.price %></span>
          <br>
          <span><i class="fas fa-users"> 1 spot left!</i></span>
          <div class="share">
            <h3>Share</h3>
            <span><i class="fab fa-facebook"></i></span>
            <span><i class="fab fa-twitter-square"></i></span>
            <span><i class="fab fa-facebook"></i></span>
          </div>   
        </div>
      </div>

      <div class="col-xs-4">
      <div class="col-xs-12" id="map-show">
          <div><%= render "shared/map" %></div>
        </div>
      </div>

      <div class="col-xs-4"> 
        <div class="col-xs-12 content-show">
          <h2 class="title-show">Book this place!</h2>
          <h3>Book this place!</h3>
          <h4>Book this place!</h4>
          <h5>Book this place!</h5>
          <h6>Book this place!</h6>

          <h4>Till the end of the world...</h4>
          <br>
          <%= link_to 'Request to book', bunker_bookings_path(@bunker.id), class: 'btn btn-danger btn-lg', method: :post %> 
        </div>
      </div>
    </div>
  </div>
</div>