    <div class="container padded" >
      <div class="row">
        <div class="col-12">
          <h1>My Bunkers / Trips</h1>
        </div>
      </div>
      <div class="row">
        <div class="col-4">
         <% if policy(Bunker).new? %>
          <%= link_to new_bunker_path do %>
           <button type="button" class="btn btn-danger">Add a new Bunker</button>
          <% end %>
         <% end %>
        </div>
      </div>
    </div>

    <div class="wrapper-mint padded">
       <div class="container">
        <div class="row">
          <% @user_bookings.each do |booking| %>
          <li><%= current_user.first_name %></li>
          <li><%= current_user.email.split("@")[0] %></li>
          <li><%= booking.bunker.name %> - host: <%= booking.bunker.user.first_name %></li>
          <li><strong><%= booking.status %></strong></li>
          <br>
          <% end %>
        </div>
       </div>
    </div>

     <div class="wrapper-darkmint padded">
       <div class="container">
        <div class="row">
        </div>
       </div>
    </div>
