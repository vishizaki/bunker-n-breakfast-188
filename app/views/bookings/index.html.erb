    <div class="container padded" >
      <div class="row">
        <div class="col-12">
          <h1>My Bunkers / Trips</h1>
        </div>
      </div>
      <div class="row">
        <div class="col-4">
         <% if policy(Bunker).new? %>
          <%= link_to new_bunker_path do %>
           <button type="button" class="btn btn-danger">Add a new Bunker</button>
          <% end %>
         <% end %>
        </div>
      </div>
    </div>

    <div class="wrapper-mint padded">
       <div class="container">
          <div class="row">
            <h1>My Booking List</h1>
            <% @user_bookings.each do |booking| %>
              <div class="message">
                <!-- <img class="avatar-large" src="https://kitt.lewagon.com/placeholder/users/gabriel-dehan"> -->
                <div class="message-name">
                  <p><%= current_user.email.split("@")[0] %></p>
                </div>
                <div class="message-body">
                  <p><strong>Is it available? </strong></p>
                </div>
                <div class="message-status">
                  <p><%= booking.bunker.name %></p>
                  <p>host: <%= booking.bunker.user.first_name %></p>
                  <p class="status"><strong><%= booking.status %></strong></p>
                </div>
              </div>
            <% end %>
          </div>
       </div>
    </div>

     <div class="wrapper-darkmint padded">
       <div class="container">
        <div class="row">
        </div>
       </div>
    </div>
